<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <h1>Menu</h1>

    <ul>
      <% RESTAURANT.menu.forEach(item => { %>
      <li>
        <strong><%= item.name %></strong><br />
        Price: $<%= item.price.toFixed(2) %><br />
        Rating: <%= item.rating %><br />
        <p><%= item.details %></p>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
